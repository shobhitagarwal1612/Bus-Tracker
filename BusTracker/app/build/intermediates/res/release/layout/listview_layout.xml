<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
    <TextView

            android:id="@+id/sourceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Source"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/arrow"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/sourceTV"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/destinationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/arrow"
            android:padding="5dp"
            android:layout_alignBottom="@+id/arrow"
            android:text="Destination"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ListView
        android:id="@+id/bus_name_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:divider="@android:color/transparent"
        android:dividerHeight="20dp"></ListView>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout><!-- From: file:/C:/Users/Shobhit%20Agarwal/Downloads/Compressed/subsurface-companion-master/BusTracker/app/src/main/res/layout/listview_layout.xml -->